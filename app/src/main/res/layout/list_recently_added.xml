<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_130sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_3sdp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_3sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingBottom="@dimen/_4sdp"
            android:paddingTop="@dimen/_3sdp"
            android:orientation="vertical">
            <com.fnspl.hiplaretails.view.TextViewSamiBold
                android:id="@+id/tv_category_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:paddingLeft="@dimen/_6sdp"
                android:textSize="@dimen/text_medium"
                android:includeFontPadding="false"
                android:layout_marginBottom="@dimen/_minus2sdp"
                android:lineSpacingExtra="0pt"
                android:paddingTop="@dimen/_3sdp"
                android:paddingBottom="0pt"
                android:text="Best Deal"/>
            <com.fnspl.hiplaretails.view.TextViewLight
                android:id="@+id/tv_category_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:gravity="center|left"
                android:paddingLeft="@dimen/_6sdp"
                android:textSize="@dimen/text_small_light"
                android:text="offer 30%"/>

            <ImageView
                android:src="@drawable/demo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_6sdp"
                android:layout_weight="1"/>
        </LinearLayout>




    </android.support.v7.widget.CardView>





</LinearLayout>