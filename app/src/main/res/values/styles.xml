<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/black_light</item>

    </style>

    <style name="NoActionBar_rating" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/sun</item>

    </style>


    <style name="NoTitleBarFullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryDark">@color/black_light</item>
        <item name="colorAccent">@color/gray</item>

    </style>
    <style name="ProductTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryDark">@color/gray</item>
        <item name="colorAccent">@color/product_page_theme</item>

    </style>



    <style name="NoTitleBarFullScreenTab" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/tab_select</item>
        <item name="colorPrimaryDark">@color/gray</item>
        <item name="colorAccent">@color/white</item>


    </style>

    <style name="dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/astral_light</item>
    </style>

    <style name="MyDialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/astral_light</item>
        <item name="colorControlActivated">@color/astral_light</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="MyCheckBox_new" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/scooter</item>
        <item name="colorControlActivated">@color/scooter</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/white</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/white</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/pelorous</item>
        <item name="colorAccent">@color/pelorous</item>
    </style>


    <style name="TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/pelorous</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/silver_chalice</item>
        <item name="colorControlActivated">@color/pelorous</item>
    </style>

    <style name="RatingBar_yellow" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/silver_chalice</item>
        <item name="colorControlActivated">@color/sun</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>



    <style name="BottomSheetStyle">

        <item name="android:windowBackground">@android:color/transparent</item>
        <!--<item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowTitleStyle">@null</item>-->

        <item name="android:background">@android:color/transparent</item>

    </style>

</resources>
