<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_350sdp"
    android:orientation="vertical"
    android:paddingBottom="@dimen/_90sdp"
    android:background="@color/white_tranperant"
    >
    <!--android:background="@drawable/rectangle_white_transparent"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/_20sdp"
       >

        <com.fnspl.hiplaretails.view.TextViewSamiBold
            android:id="@+id/tv_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SIZE"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/_14ssp"
            android:padding="@dimen/_6sdp"
            android:background="@drawable/rectangle_gray_left_3corner5dp"/>

        <com.fnspl.hiplaretails.view.TextViewSamiBold
            android:id="@+id/tv_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="COLOR"
            android:gravity="center"
            android:textColor="@color/tab_selected_color_dialog"
            android:textSize="@dimen/_14ssp"
            android:padding="@dimen/_6sdp"
            android:background="@drawable/rectangle_white_right_3corner5dp"/>


    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_size"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_300sdp"
        android:visibility="visible">

    </android.support.v7.widget.RecyclerView>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_300sdp"
        android:numColumns="3"
        android:visibility="gone">

    </android.support.v7.widget.RecyclerView>



</LinearLayout>